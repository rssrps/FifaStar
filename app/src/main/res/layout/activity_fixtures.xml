<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fixtures"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="in.raman.raman.fifastar.Fixtures">

    <TextView
        android:text="- Matches Today - "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <ImageView
        app:srcCompat="@drawable/white"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/fixtureImage"
        android:layout_height="340dp"
        android:layout_width="330dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/fixtureAnnouncement"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/fixtureImage"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Champions League"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#ffff"
        android:id="@+id/CL_btn"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Loading...Please wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
